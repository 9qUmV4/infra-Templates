# https://editorconfig.org/
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.css]
indent_size = 2

[{*.go,go.mod}]
indent_style = tab
indent_size = unset

[*.json]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.py]
indent_size = 4

[*.tf]
indent_size = unset

[{*.{yaml,yml},.yamllint}]
indent_size = 2

[*.xml]
indent_size = 2

[justfile]
indent_size = 2

[*{.sh,.bash}]
indent_size = 2
